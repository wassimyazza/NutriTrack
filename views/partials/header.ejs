<header id="header" class="fixed top-0 left-0 right-0 z-50 bg-gray-900/80 backdrop-blur-md border-b border-gray-800">
   <nav id="navbar"
      class="max-w-7xl mx-auto flex justify-between items-center gap-4 sm:gap-8 md:gap-12 px-6 py-4 font-semibold">
      <a href="/" id="logo" class="flex items-center gap-2">
         <img src="/images/logo.png" alt="logo" class="h-10" />
      </a>
      <% if(authUser){ %>
      <div class="hidden md:flex items-center gap-8">
         <a id="dashboardBtn" href="/dashboard"
            class="text-gray-300 hover:text-[#FF7040] transition-colors">Dashboard</a>
         <a id="addMealBtn" href="/meals/upload" class="text-gray-300 hover:text-[#FF7040] transition-colors">AI
            anlayse</a>
         <a id="historique" href="/historique"
            class="text-gray-300 hover:text-[#FF7040] transition-colors">Historique</a>
         <a href="/profile" style="display: flex; justify-content: center; align-items: center; padding: 0;" id="profil"
            class="w-12 h-12 flex justify-center items-center rounded-full bg-gradient-to-r from-[#FF7040] to-[#FF5820] font-bold text-white hover:shadow-lg hover:shadow-[#FF7040]/50 transition-all">
            <i class="fa-solid fa-user text-2xl text-black"></i>
         </a>
      </div>
      <% } %>


      <% if(!authUser){ %>
      <a href="/login" class="text-gray-300 hover:text-[#FF7040] transition-colors" id="connection">Se connecter</a>
      <% } %>
   </nav>

