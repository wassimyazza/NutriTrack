<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NutriTrack - Dashboard</title>
</head>
<body class="bg-darker text-gray-100 min-h-screen">
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Welcome Header -->
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-white mb-2">Bienvenue, <%- user?.name.split(' ')[0]%></h2>
            <p class="text-gray-400">Voici un aperçu de votre progression nutritionnelle</p>
        </div>

        <!-- Profil Rapide - Full Width -->
        <div class="bg-dark rounded-xl p-6 border border-gray-800 hover:border-primary transition mb-8">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
                <div class="flex-1">
                    <div class="flex items-center gap-4 mb-4">
                        <h3 class="text-xl font-bold text-white">Profil Rapide</h3>
                        <span class="bg-primary bg-opacity-20 text-white px-3 py-1 rounded-full text-sm font-semibold">Athlète</span>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="flex items-center text-gray-300">
                            <svg class="w-5 h-5 mr-3 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span><%- user?.name %>, <%- user?.age %> ans</span>
                        </div>
                        <div class="flex items-center text-gray-300">
                            <svg class="w-5 h-5 mr-3 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>Objectif: <%- user?.goal %></span>
                        </div>
                        <div class="flex items-center text-gray-300">
                            <svg class="w-5 h-5 mr-3 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                            <span>Activité: <%- user?.activity_level %></span>
                        </div>
                    </div>
                </div>
                
                <a href="/profile" class="md:w-auto w-full bg-gradient-to-r from-primary to-secondary text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition text-center whitespace-nowrap">
                    Voir profil complet
                </a>
            </div>
        </div>


            <!-- Recommandations Récentes -->
            <div class="bg-dark rounded-xl p-6 border border-gray-800  mb-6">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-xl font-bold text-white">Recommandations IA</h3>
                </div>
                <div class="space-y-4">
                    <% for (let i = 0; i < recommendations.length; i++) { 
                        const recommendation = recommendations[i] %>
                        <%- include('../partials/cardRecommendation.ejs', {recommendation})%>
                    <% } %>
                </div>
            </div>
        
            <!-- Repas Récents -->
            <div class="bg-dark rounded-xl p-6 border border-gray-800">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-xl font-bold text-white">Repas Récents</h3>
                    
                </div>
                <div class="flex justify-between flex-wrap gap-4 ">
                    <% for (let i = 0; i < meals.length; i++) {
                        const meal = meals[i]; %>
                        <%- include('../partials/cardMeal.ejs', {meal: meal}) %>
                    <% } %>
                </div>
            </div>
    </div>

    <!-- Quick Action Button -->
    <div class="fixed bottom-8 right-8">
        <button class="bg-gradient-to-r from-primary to-secondary text-white w-16 h-16 rounded-full shadow-2xl hover:scale-110 transition transform flex items-center justify-center">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
        </button>
    </div>
</body>
</html>