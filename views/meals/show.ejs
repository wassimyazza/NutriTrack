

<% if (success) { %>
<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6">
    <p class="font-bold">Repas ajouté avec succès aux repas consommés!</p>
</div>
<% } %>
<div class="min-h-screen bg-gradient-to-b from-orange-50 to-teal-50 py-12 px-4">
    <div class="max-w-4xl mx-auto">
        <div class="mb-6">
            <a href="/dashboard" class="inline-flex items-center text-teal-600 hover:text-teal-700 font-semibold">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to dashboard
            </a>
        </div>

        <div class="bg-white rounded-3xl shadow-lg overflow-hidden">
            <div class="relative h-96">
                <img src="<%= meal.image_path.startsWith('/') ? meal.image_path : '/images/uploads/' + meal.image_path %>"
                    alt="Repas" class="w-full h-full object-cover">
                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-6">
                    <div class="flex items-center justify-between text-white">
                        <div>
                            <h1 class="text-3xl font-bold mb-2">
                                <%= meal.name %>
                            </h1>
                            <p class="text-lg">
                                <%= new Date(meal.created_at).toLocaleDateString('fr-FR', { day: 'numeric' ,
                                    month: 'long' , year: 'numeric' , hour: '2-digit' , minute: '2-digit' }) %>
                            </p>
                        </div>
                        <% if (meal.analyzed) { %>
                            <span class="bg-green-500 px-4 py-2 rounded-full font-semibold">Analysé</span>
                            <% } else { %>
                                <span class="bg-yellow-500 px-4 py-2 rounded-full font-semibold">En attente</span>
                                <% } %>
                    </div>
                </div>
            </div>

            <div class="p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Informations nutritionnelles</h2>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                    <div class="bg-orange-50 rounded-xl p-6 text-center">
                        <p class="text-gray-600 text-sm mb-2">Calories</p>
                        <p class="text-3xl font-bold text-orange-600">
                            <%= meal.calories %>
                        </p>
                        <p class="text-gray-500 text-xs">kcal</p>
                    </div>
                    <div class="bg-blue-50 rounded-xl p-6 text-center">
                        <p class="text-gray-600 text-sm mb-2">Protéines</p>
                        <p class="text-3xl font-bold text-blue-600">
                            <%= meal.proteins %>
                        </p>
                        <p class="text-gray-500 text-xs">g</p>
                    </div>
                    <div class="bg-purple-50 rounded-xl p-6 text-center">
                        <p class="text-gray-600 text-sm mb-2">Glucides</p>
                        <p class="text-3xl font-bold text-purple-600">
                            <%= meal.carbs %>
                        </p>
                        <p class="text-gray-500 text-xs">g</p>
                    </div>
                    <div class="bg-yellow-50 rounded-xl p-6 text-center">
                        <p class="text-gray-600 text-sm mb-2">Lipides</p>
                        <p class="text-3xl font-bold text-yellow-600">
                            <%= meal.fats %>
                        </p>
                        <p class="text-gray-500 text-xs">g</p>
                    </div>
                </div>

                <% if (recommendations && recommendations.length> 0) { %>
                    <div class="bg-teal-50 rounded-2xl p-6 mb-6">
                        <h3 class="text-xl font-bold text-teal-800 mb-4 flex items-center">
                            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z">
                                </path>
                            </svg>
                            Recommandations
                        </h3>
                        <ul class="space-y-3">
                            <% recommendations.forEach(function(rec) { %>
                                <li class="flex items-start">
                                    <span class="bg-teal-200 rounded-full w-2 h-2 mt-2 mr-3 flex-shrink-0"></span>
                                    <p class="text-gray-700">
                                        <%= rec.recommendation_text %>
                                    </p>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                    <% } else { %>
                        <div class="bg-gray-100 rounded-2xl p-6 text-center mb-6">
                            <p class="text-gray-600">Aucune recommandation disponible pour ce repas</p>
                        </div>
                        <% } %>

                            <div class="space-y-4">
                                <form method="POST" action="/meals/<%= meal.id %>/add-to-eaten">
                                    <button type="submit"
                                        class="w-full bg-green-500 text-white p-4 rounded-lg font-bold hover:bg-green-600 transition">
                                        Add to meals consumed
                                    </button>
                                </form>
                                <a href="/historique"
                                    class="block w-full bg-teal-500 text-white p-4 rounded-lg font-bold hover:bg-teal-600 transition text-center">
                                    Go To Historique
                                </a>
                            </div>
            </div>
        </div>
    </div>
</div>