<div class="min-h-screen bg-gradient-to-b from-orange-50 to-teal-50 py-12 px-4">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-3xl border-2 border-green-300 p-8 shadow-lg">
            <div class="text-center mb-6">
                <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <h2 class="text-3xl font-bold text-gray-800 mb-2">Analyse Terminée</h2>
            </div>

            <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div>
                    <h3 class="font-bold text-lg text-gray-800 mb-3">Votre Repas</h3>
                    <img src="<%= imagePath %>" alt="Uploaded meal" class="w-full h-64 object-cover rounded-lg shadow-md" />
                    
                    <div class="bg-gray-50 rounded-lg p-4 mt-4">
                        <p class="text-gray-700"><strong>Nom:</strong> <%= mealName %></p>
                        <% if (notes && notes !== 'Aucune note') { %>
                        <p class="text-gray-700"><strong>Notes:</strong> <%= notes %></p>
                        <% } %>
                    </div>
                </div>

                <div>
                    <h3 class="font-bold text-lg text-gray-800 mb-3">Analyse IA</h3>
                    
                    <div class="bg-teal-50 rounded-lg p-4 mb-4">
                        <h4 class="font-semibold text-teal-800 mb-2">Aliments identifiés:</h4>
                        <ul class="list-disc list-inside text-gray-700">
                            <% if (analysis.foods && analysis.foods.length > 0) { %>
                                <% analysis.foods.forEach(food => { %>
                                    <li><%= food %></li>
                                <% }) %>
                            <% } else { %>
                                <li>Aucun aliment identifié</li>
                            <% } %>
                        </ul>
                    </div>

                    <div class="bg-orange-50 rounded-lg p-4 mb-4">
                        <h4 class="font-semibold text-orange-800 mb-3">Informations nutritionnelles estimées:</h4>
                        <div class="grid grid-cols-2 gap-3">
                            <div class="bg-white p-3 rounded">
                                <p class="text-gray-600 text-sm">Calories</p>
                                <p class="text-2xl font-bold text-orange-600"><%= analysis.calories %> kcal</p>
                            </div>
                            <div class="bg-white p-3 rounded">
                                <p class="text-gray-600 text-sm">Protéines</p>
                                <p class="text-2xl font-bold text-orange-600"><%= analysis.proteins %> g</p>
                            </div>
                            <div class="bg-white p-3 rounded">
                                <p class="text-gray-600 text-sm">Glucides</p>
                                <p class="text-2xl font-bold text-orange-600"><%= analysis.carbs %> g</p>
                            </div>
                            <div class="bg-white p-3 rounded">
                                <p class="text-gray-600 text-sm">Lipides</p>
                                <p class="text-2xl font-bold text-orange-600"><%= analysis.fats %> g</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-purple-50 rounded-lg p-4 mb-6">
                <h4 class="font-semibold text-purple-800 mb-3">Recommandations:</h4>
                <ul class="space-y-2">
                    <% if (analysis.recommendations && analysis.recommendations.length > 0) { %>
                        <% analysis.recommendations.forEach(rec => { %>
                            <li class="flex items-start text-gray-700">
                                <span class="text-purple-500 mr-2">•</span>
                                <span><%= rec %></span>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li class="text-gray-700">Aucune recommandation disponible</li>
                    <% } %>
                </ul>
            </div>

            <div class="space-y-4">
                <a href="/meals/upload" class="block w-full bg-orange-500 text-white p-4 rounded-lg font-bold hover:bg-orange-600 transition text-center">
                    Analyser un autre repas
                </a>
                <a href="/dashboard" class="block w-full bg-teal-500 text-white p-4 rounded-lg font-bold hover:bg-teal-600 transition text-center">
                    Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>
</div>